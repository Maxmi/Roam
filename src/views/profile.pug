extends layout
block content
  
  if name 
    div.profileTop      
      a#homelink.link(href='/') Home Page
      
      a#logoutlink.link(href='logout') Log Out
      
    div.container
      div#userInfo
        form#userInfo(action=`/users/${userID}` method='POST')
          
          div.form-group
            div(name='img').form-control
              img(src=`/images/userPics/img${imgNum}.jpeg`)
          
          div.form-group
            label(for='name') Name: 
            div(name='name').form-control
              span#name(contenteditable='true') #{name}
          div.form-group
            label(for='city') City: 
            div(name='city').form-control
              span#city(contenteditable='true') #{city}
          div.form-group
            label(for='date') Date joined: 
            div(name='date').form-control
              span#joined #{joined.toString().slice(0,15)}
          
          br
          button#edit.btn.btn-info(type='submit') Edit Profile
    

      div#userPosts
        each post in posts
          div.postCard
            button.btn.btn-info Edit 
            button.btn.btn-warning Delete 
            p.city= post.city_name
            p.title= post.title  
            p.content= post.content  
            span.date= post.date_added.toString().slice(3,15)
            
    
      div.profileFooter
      
  else 
    h1 #{title}
    h2 You need to be logged in to view this page
