extends layout
block content
  div.banner
    img
  div.container
    div.info
      h3 #{name}
      h4 #{info}
      a#linkToAddNewPost(href='/posts/newPost') Add New Review 

    div#userPosts
      p Posts:
        div
          each post in posts
            div
              p= post.title  
              p= post.content  
              p= post.date_added
              p= post.name
    
