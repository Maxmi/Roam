extends layout
block content
  if name
    h2 Welcome back #{name}
    a#logoutlink(href='logout') Log Out
  else 
    h1 #{title} 
    div#form
      form(method='POST' action='/signup')
        label(for='name') Name:
        input#name.form-control(type='text' name='name' placeholder='your name')
        br
          
        label(for='email') Email:
        input#email.form-control(type='email' name='email' placeholder='email')
        br
        
        label(for='password') Password:
        input#password.form-control(type='password' name='password' placeholder='password')
        br
          
        label(for='name') City:
        input#city.form-control(type='text' name='city' placeholder='your current city')
        br
        
        p #{error}
      
        button#signupBtn(type='submit') Sign Up
